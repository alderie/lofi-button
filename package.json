{
  "name": "lofi-button",
  "productName": "Lofi Button",
  "version": "1.0.1",
  "description": "Electron build system based on Electron-React-Boilerplate for the Lofi Button application",
  "main": "./dist/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,scss}\"",
    "typecheck": "tsc --noEmit",
    "package": "electron-vite build && electron-builder build --publish never",
    "package:mac": "electron-vite build && electron-builder build --mac",
    "package:win": "electron-vite build && electron-builder build --win",
    "package:linux": "electron-vite build && electron-builder build --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "cross-env NODE_ENV=development eslint --cache"
    ],
    "{*.json,.{babelrc,eslintrc,prettierrc}}": [
      "prettier --ignore-path .eslintignore --parser json --write"
    ],
    "*.{css,scss}": [
      "prettier --ignore-path .eslintignore --single-quote --write"
    ],
    "*.{html,md,yml}": [
      "prettier --ignore-path .eslintignore --single-quote --write"
    ]
  },
  "build": {
    "productName": "Lofi Button",
    "appId": "org.erb.LofiButton",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "afterSign": "scripts/Notarize.js",
    "mac": {
      "target": [
        "dmg"
      ],
      "type": "distribution",
      "hardenedRuntime": true,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icons/icon.png"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development"
    },
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "extraResources": [
      "./assets/**"
    ],
    "publish": {
      "provider": "github",
      "owner": "alderie",
      "repo": "lofi-button"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alderie/lofi-button.git"
  },
  "author": {
    "name": "Victor Novichkov",
    "url": "https://github.com/alderie"
  },
  "contributors": [],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alderie/lofi-button/issues"
  },
  "keywords": [
    "electron",
    "lofi",
    "react",
    "typescript",
    "player"
  ],
  "devDependencies": {
    "@types/node": "^20.19.27",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "@vitejs/plugin-react": "^4.7.0",
    "cross-env": "^7.0.2",
    "electron": "^39.2.7",
    "electron-builder": "^24.13.3",
    "electron-devtools-installer": "^3.1.1",
    "electron-notarize": "^1.0.0",
    "electron-vite": "^5.0.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.0.8",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "sass": "^1.97.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "dependencies": {
    "electron-log": "^4.2.4",
    "electron-store": "^10.1.0",
    "electron-updater": "^6.6.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-player": "^2.16.1",
    "source-map-support": "^0.5.19"
  },
  "collective": {
    "url": "https://opencollective.com/electron-react-boilerplate-594"
  },
  "browserslist": [],
  "prettier": {
    "overrides": [
      {
        "files": [
          ".prettierrc",
          ".eslintrc"
        ],
        "options": {
          "parser": "json"
        }
      }
    ],
    "singleQuote": true
  },
  "renovate": {
    "extends": [
      "bliss"
    ],
    "baseBranches": [
      "next"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
